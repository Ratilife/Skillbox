
Процедура ОбработкаПроверкиЗаполнения(Отказ, ПроверяемыеРеквизиты)
			Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ДополнительныеНачисления.Ссылка
		|ИЗ
		|	ПланВидовРасчета.ДополнительныеНачисления КАК ДополнительныеНачисления
		|ГДЕ
		|	ДополнительныеНачисления.Код = &Код
		|	И ДополнительныеНачисления.Ссылка <> &Ссылка";

		
		Запрос.УстановитьПараметр("Код", Код);
	Запрос.УстановитьПараметр("Ссылка", Ссылка);

	Результат = Запрос.Выполнить();
	
	Если Не Результат.Пустой() Тогда
	
		Отказ = Истина;
		ВыборкаДетальныеЗаписи = Результат.Выбрать();

		Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
			
			Сообщение = Новый СообщениеПользователю;
			Сообщение.Текст = "Элемент с кодом "+Код+" - "+ВыборкаДетальныеЗаписи.Ссылка;
			Сообщение.Сообщить(); 
			
		КонецЦикла;
		
	
	КонецЕсли; 


